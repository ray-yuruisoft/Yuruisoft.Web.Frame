@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/Content/themes/icon.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery.easyui.min.js"></script>
    <script src="~/Scripts/easyui-lang-zh_CN.js"></script>
    <script src="~/Scripts/datapattern.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/Yuruisoft.RS.Js/Yuruisoft.RS.ActionInfo.Index.js"></script>
    <script src="~/Scripts/Yuruisoft.RS.Js/MyAjaxForm.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#addDiv").css("display", "none");
            $("#editDiv").css("display", "none");
            $("#setActionRoleDiv").css("display", "none");
            loadData();
            bindselectActionTypeChange();//给权限类型下拉框加上改变事件
            bindFileUpload();//文件上传
        });
    </script>
</head>
<body>
    <!-------------------------------------------------------------数据表插入位置DataGrid-------开始------------------------------------------------------>
    <div>
        <table id="tt">
        </table>
    </div>
    <!-------------------------------------------------------------数据表插入位置DataGrid-------结束------------------------------------------------------>



    <!------------------------添加信息开始----------对话框元素-------------------------------------------->
    <div id="addDiv">
        @using (Ajax.BeginForm("AddActionInfo", new { }, new AjaxOptions() { Confirm = "你确定添加吗?", HttpMethod = "post", OnSuccess = "afterAdd" }, new { id = "addForm" }))
        {
            <table>
                <tr>
                    <td>权限名称</td>
                    <td>
                        <input type="text" name="ActionInfoName" /></td>
                </tr>
                <tr>
                    <td>URL</td>
                    <td>
                        <input type="text" name="URL" /></td>
                </tr>
                <tr>
                    <td>HttpMethod:</td>
                    <td>
                        <select name="HttpMethod">
                            <option value="GET">GET</option>
                            <option value="Post">Post</option>
                        </select>

                    </td>
                </tr>
                <tr>
                    <td>权限类型</td>
                    <td>
                        <select name="ActionTypeEnum" id="selectActionType">
                            <option value="0">普通权限</option>
                            <option value="1">菜单权限</option>
                        </select>
                    </td>
                </tr>
                <tr style="display: none" id="imageIconTr">
                    <td>菜单图标:</td>
                    <td>
                        <input type="file" name="MenuIcon" id="imgIcon" /><input type="button" id="btnUpload" value="异步上传" />
                        <input type="hidden" id="hidImage" name="MenuIcon" />
                        <div id="menuIconShow">
                        </div>

                    </td>
                </tr>

                <tr>
                    <td>排序</td>
                    <td>
                        <input type="text" name="Sort" /></td>
                </tr>
                <tr>
                    <td>备注</td>
                    <td>
                        <input type="text" name="Remark" /></td>
                </tr>
            </table>
        }
    </div>
    <!------------------------添加信息结束----------对话框元素-------------------------------------------->



    <!------------------------修改信息开始----------对话框元素-------------------------------------------->
    <div id="editDiv" style="overflow: hidden">
        <iframe id="editFrame" frameborder="0" width="100%" height="100%"></iframe>
    </div>
    <!------------------------修改信息结束----------对话框元素-------------------------------------------->



    <!------------------------为权限分配角色开始----对话框元素-------------------------------------------->
    <div id="setActionRoleDiv">
        <iframe id="setActionRoleFrame" frameborder="0" width="100%" height="100%"></iframe>
    </div>
    <!------------------------为权限分配角色结束----对话框元素-------------------------------------------->



</body>
</html>
